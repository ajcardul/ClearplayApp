<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#085747"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Start Puzzle" />

    <Button
        android:id="@+id/optionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:text="Options" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="750dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/pic" />

    <ImageView
        android:id="@+id/puzzleBase"
        android:layout_width="730dp"
        android:layout_height="330dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="184dp" />

    <ImageView
        android:id="@+id/cover_12_1"
        android:layout_width="183dp"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/c12_1" />

    <ImageView
        android:id="@+id/cover_12_2"
        android:layout_width="183dp"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginStart="183dp"
        android:src="@drawable/c12_2" />

    <Button
        android:id="@+id/slideShowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="225dp"
        android:text="Slide Show" />

    <Button
        android:id="@+id/importButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="325dp"
        android:text="Import" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        android:weightSum="3.5" >

        <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".5" >

            <Button
                android:id="@+id/mainMenu"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Main Menu"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/temp"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="hold"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/temp2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="hold2"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/reset"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Undo"
                style="?android:attr/buttonBarButtonStyle" />


        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text=""
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text=""
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text=""
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text=""
                style="?android:attr/buttonBarButtonStyle" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text=""
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text=""
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text=""
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".3"
                android:text=""
                style="?android:attr/buttonBarButtonStyle" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >


            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:text=""
                style="?android:attr/buttonBarButtonStyle" />
            <Button
                android:id="@+id/button10"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:text=""
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/button11"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:text=""
                style="?android:attr/buttonBarButtonStyle" />
            <Button
                android:id="@+id/button12"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:text=""
                style="?android:attr/buttonBarButtonStyle" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
